@model Footbet.Models.LoginViewModel

@{
    ViewBag.Title = "Logg inn";
    ViewBag.ReturnUrl = "/Bet";
}

<div class="row">
    <div class="col-lg-2 hidden-md hidden-sm hidden-xs">
        <img class="loginImage top-buffer " src="~/Content/images/brasil-medium.PNG">
    </div>
    <div class="col-lg-9">
        <div class="row">
            <div class="row">
                <div class="col-lg-offset-1">
                    <h2>@ViewBag.Title.</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1">
                    <h4>Velkommen. Logg inn, eller registrer en konto.</h4>
                </div>
            </div>
            <div class="col-md-8">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationMessage("", new { @class = "errorText" })

                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Logg inn" class="btn btn-default" />
                            </div>
                        </div>
                        <p class="col-md-offset-2">
                            @Html.ActionLink("Registrer", "Register") deg hvis du ikke allerede har en konto
                        </p>
                    }
                </section>
            </div>
        </div>
    </div>
</div>